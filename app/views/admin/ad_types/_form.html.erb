<%= simple_form_for [:admin, @ad_type] do |f| %>
  <%= f.input :name %>
  <%= f.input :description, input_html: { rows: 5 } %>
  <%= f.association :industry %>
  <%= render 'admin/shared/image_form_field', f: f, name: :image, version: :small_square %>

  <%= f.submit 'Save', class: 'btn btn-primary' %>
  <%= link_to 'Cancel', admin_ad_types_path, class: 'btn btn-default', target: '_self' %>
<% end %>
