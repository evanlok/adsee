<h1 class="page-header">Video Types</h1>

<p>
  <%= link_to 'New Video Type', new_admin_video_type_path %>
</p>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="2">Description</th>
  </tr>
  </thead>

  <tbody>
  <% @video_types.each do |video_type| %>
    <tr>
      <td><%= link_to video_type.name, [:edit, :admin, video_type] %></td>
      <td><%= simple_format video_type.description %></td>
      <td class="actions">
        <%= link_to [:edit, :admin, video_type], title: 'Edit' do %>
          <i class="fa fa-pencil"></i>
        <% end %>

        <%= link_to [:admin, video_type], method: :delete, title: 'Delete', data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-trash-o"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @video_types %>
