<%= simple_form_for [:admin, @fb_targeting_spec] do |f| %>
  <%= f.input :name %>
  <%= f.input :data, as: :text, input_html: { rows: 20, value: f.object.data_before_type_cast } %>

  <%= f.submit 'Save', class: 'btn btn-primary' %>
  <%= link_to 'Cancel', admin_facebook_targeting_specs_path, class: 'btn btn-default' %>
<% end %>
