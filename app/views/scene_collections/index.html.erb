<div class="my-videos">
  <div class="row">
    <div class="col-md-12">
      <h1><i class="fa fa-file-video-o"></i>&nbsp;My Videos</h1>
      <br/>

      <% @scene_collections.each do |scene_collection| %>
          <div class="video-item">
            <% if scene_collection.generated? %>
                <div class="watch-button">
                  <%= link_to 'Watch', '', 'video-overlay-link' => scene_collection.video.url %>
                </div>
            <% end %>

            <div class="video-info">
              <%= link_to scene_collection.name.present? ? scene_collection.name : "Video #{scene_collection.id}", [:edit, scene_collection], target: '_self', class: "video-title" %>
              <div>
                <span>
                  Video Status: <%= scene_collection.status.capitalize %>
                </span>
                <span class="text-divider-blue">&nbsp;&nbsp;|&nbsp;&nbsp;</span>
                <span>
                  Ad Status: <%= scene_collection.facebook_ads.first&.status&.capitalize || 'Unpublished' %>
                </span>
                <span class="text-divider-blue">&nbsp;&nbsp;|&nbsp;&nbsp;</span>
                <span>
                  Created: <%= scene_collection.created_at.to_s(:full) %>
                </span>
                <span class="text-divider-blue">&nbsp;&nbsp;|&nbsp;&nbsp;</span>
                <span>
                  <%= link_to 'Delete', scene_collection_path(scene_collection), method: :delete, data: { confirm: 'Are you sure?' } %>
                </span>
              </div>
            </div>        
          </div>
      <% end %>

      <%= paginate @scene_collections %>

    </div>
  </div>
</div>