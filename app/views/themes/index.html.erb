<h1>Select a theme.</h1>

<ul>
  <% @themes.each do |theme| %>
    <li>
      <%= link_to theme.name, theme, target: '_self' %>
      <%= image_tag theme.thumbnail.url(:large_square) %>
    </li>
  <% end %>
</ul>

<div class="text-center">
  <%= form_for SceneCollection.new do |f| %>
    <%= f.hidden_field :ad_type_id, value: @ad_type.id %>
    <%= f.submit 'Build my own', class: 'btn btn-primary' %>
  <% end %>
</div>
